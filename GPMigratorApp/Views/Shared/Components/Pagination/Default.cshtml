@model PaginationViewModel

<div class="pagination">
    @if (Model.HasPreviousPage)
    {
        <a href="@Url.Page(Model.PageHandler, new { page = Model.CurrentPage - 1 })">Previous</a>
    }

    @for (int i = Model.StartPage; i <= Model.EndPage; i++)
    {
        <a href="@Url.Page(Model.PageHandler, new { page = i })" class="@(i == Model.CurrentPage ? "active" : "")">@i</a>
    }

    @if (Model.HasNextPage)
    {
        <a href="@Url.Page(Model.PageHandler, new { page = Model.CurrentPage + 1 })">Next</a>
    }
</div>
